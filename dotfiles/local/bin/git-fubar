#!/bin/bash

# This script is for when you totally screw up and want to just start over. It
# removes everything in the current directory and reclones the repo. Running a
# script which deletes everything in the current directory sounds about as
# stupid as it is. Use at your own risk, because sooner or later, you are going
# to delete something you didn't mean to.

REMOTE="$(git remote -v 2> /dev/null | grep "origin\s.\+(fetch)" | awk '{print $2}')"
if [ -n "$REMOTE" ]; then
    find . -mindepth 1 -delete
    git clone $REMOTE .
fi
